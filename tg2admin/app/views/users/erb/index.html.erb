    <th>Totaldownloads</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.gid %></td>
    <td><%=h user.username %></td>
    <td><%=h user.firstname %></td>
    <td><%=h user.lastname %></td>
    <td><%=h user.password %></td>
    <td><%=h user.pwexpires %></td>
    <td><%=h user.pwhint %></td>
    <td><%=h user.notes %></td>
    <td><%=h user.city %></td>
    <td><%=h user.state %></td>
    <td><%=h user.postalcode %></td>
    <td><%=h user.country %></td>
    <td><%=h user.email %></td>
    <td><%=h user.gender %></td>
    <td><%=h user.address1 %></td>
    <td><%=h user.address2 %></td>
    <td><%=h user.phone1 %></td>
    <td><%=h user.phone2 %></td>
    <td><%=h user.bday %></td>
    <td><%=h user.lastlogin %></td>
    <td><%=h user.enabled %></td>
    <td><%=h user.mailbox %></td>
    <td><%=h user.logintotal %></td>
    <td><%=h user.timebank %></td>
    <td><%=h user.loginfailed %></td>
    <td><%=h user.mailquota %></td>
    <td><%=h user.totalposts %></td>
    <td><%=h user.totaluploads %></td>
    <td><%=h user.totaldownloads %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

