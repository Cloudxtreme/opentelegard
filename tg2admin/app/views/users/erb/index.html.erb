<h1>Listing users</h1>

<table>
  <tr>
    <th>Gid</th>
    <th>Username</th>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Password</th>
    <th>Pwexpires</th>
    <th>Pwhint</th>
    <th>Notes</th>
    <th>City</th>
    <th>State</th>
    <th>Postalcode</th>
    <th>Country</th>
    <th>Email</th>
    <th>Gender</th>
    <th>Address1</th>
    <th>Address2</th>
    <th>Phone1</th>
    <th>Phone2</th>
    <th>Bday</th>
    <th>Lastlogin</th>
    <th>Enabled</th>
    <th>Mailbox</th>
    <th>Logintotal</th>
    <th>Timebank</th>
